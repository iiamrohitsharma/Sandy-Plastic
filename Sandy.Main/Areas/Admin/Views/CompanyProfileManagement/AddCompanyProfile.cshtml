@using Sandy.Core.Entities

@model CompanyProfile

@{
    ViewData["Title"] = "New Company Profile";
    ViewData["SubHeading"] = "Add company profiles";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model=>model.ID)

    <div class="card card-header">
        <small>
            Company Details
        </small>
    </div>
    <div class="card card-body">
        <div class="form-group">
            @Html.LabelFor(model=>model.Name, new { htmlAttributes = new { @class = "form-control" }})
            @Html.EditorFor(model=>model.Name,new { htmlAttributes = new { @class = "form-control", placeholder = "First Name"  } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model=>model.Description, new { htmlAttributes = new { @class = "form-control" }})
            @Html.TextAreaFor(model => model.Description, 5, 40, htmlAttributes: new  { @class = "form-control" });
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary default-button-size">Save</button>
        <button type="button" class="btn btn-secondary default-button-size">Cancel</button>
    </div>

}
