@using Sandy.Core.Entities

@model IReadOnlyList<CompanyProfile>

@{
    ViewData["Title"] = "Company Profile";
    ViewData["SubHeading"] = "Manage company profiles";
}

<div class="text-right">
    <a class="btn btn-primary default-button-size" asp-action="AddCompanyProfile"><i class="fa fa-plus">&nbsp;</i>Add Profile</a>
</div>
<hr />
<table id="tblCompanyProfile" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CompanyProfile companyProfile in Model)
        {
            <tr>
                <td>@companyProfile.ID</td>
                <td>@companyProfile.Name</td>
                <td>@companyProfile.Description</td>
            </tr>
        }
    </tbody>
</table>

